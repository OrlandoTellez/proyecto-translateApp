        </div>
    </div>
    <script src="../js/script.js"></script>
</section>

<style>
    section{
        width: 100%;
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .container-section{
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .img-fondo{
        width: 100%;
        height: 100vh;
        background-image: linear-gradient(rgba(0, 0, 0, 0.1), rgb(0, 0, 0, 1)), url('img/hero_img.jpg');
        background-position: center;
        background-size: cover;
        background-repeat: no-repeat;
        filter: brightness(100%);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding-bottom: 40px;
    }

    .img-fondo .tarjeta{
        width: 200px;
        height: 400px;
        background-color: rgba(4, 7, 17, .7);
        backdrop-filter: blur(4rem);
    }

    /* Estilos de las tarjetas */

    select{
        background-color: rgba(4, 7, 17, .7);
        border: none;
        outline: none;
        color: white;
        backdrop-filter: blur(4px);
        margin-bottom: 10px;
    }

    .header{
        display: flex;
        
        height: 100%;
        align-items: flex-start;
    }

    .iconButton{
        border: 0;
        background: none;
        font-size: 15px;
        padding: 3px;
        cursor: pointer;
    }

    .containerTextArea{
        display: flex;
        gap: 20px;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }


    textarea{
        width: 100%;
        height: 100%;
        font-size: 30px;
        outline: none;
        resize: none;
        background: none;
        border: none;
        color: white;
    }

    .translate{
        background-color: #3662E3;
        cursor: pointer;
        color: white;
        border: none;
        font-size: 1.3em;
        padding: 5px 12px;
        border-radius: 10px;
    }

    .tarjeta1{
        height: 350px;
        background-color: rgba(4, 7, 17, .7);
        backdrop-filter: blur(4rem);
        border-radius: 20px;
        border: 1px solid white;
        padding: 20px 20px 40px 20px;
    }

    .tarjeta2{
        height: 350px;
        background-color: rgba(4, 7, 17, .7);
        backdrop-filter: blur(4px);
        border-radius: 20px;
        border: 1px solid white;
        padding: 20px 20px 40px 20px;

    }

    .container-tarjetas{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .iconos-1{
        display: flex;
        padding: 20px 0px;
        gap: 20px;
    }

    .iconos-2{
        display: flex;
        padding: 20px 0px;;
    }
</style>

